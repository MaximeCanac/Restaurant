{% extends 'base.html.twig' %}

{% block title %}Menu Création{% endblock %}

{% block body %}
    <div class="container">
        <h1>Création d'un menu</h1>
        

        {{ form_start(imageForm, {'attr': {'class': 'image-form'}}) }}
        <div class="form-group">
            {{ form_label(imageForm.image, 'Image') }}
            {{ form_widget(imageForm.image, {'attr': {'class': 'form-control-file'}}) }}
        </div>

        {{ form_row(imageForm._token) }}

        <button type="submit" class="btn btn-primary">Ajouter Image</button>

        {{ form_end(imageForm) }}

        {{ form_start(form, {'attr': {'class': 'menu-form'}}) }}
        <div class="form-group">
            {{ form_label(form.entrees, 'Entrées') }}
            {{ form_widget(form.entrees, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(form.plats, 'Plats') }}
            {{ form_widget(form.plats, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(form.desserts, 'Desserts') }}
            {{ form_widget(form.desserts, {'attr': {'class': 'form-control'}}) }}
        </div>

        {{ form_row(form._token) }}

        <button type="submit" class="btn btn-primary">Créer</button>

        {{ form_end(form) }}

        
    </div>
{% endblock %}
