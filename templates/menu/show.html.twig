{% extends 'base.html.twig' %}

{% block title %}Menu{% endblock %}

{% block body %}
    <div class="container">
        <div class="menu text-center">
            <h1 class="menu-title">Menu</h1>
            <hr class="menu-divider">

            <div class="menu-section">
                <h2 class="menu-section-title">Entrées :</h2>
                <ul class="menu-items">
                    {% for entree in menu.entrees %}
                        <li class="menu-item">
                             {{ entree.nom }}
                        </li>
                    {% else %}
                        <li class="menu-item">Aucune entrée disponible pour le moment.</li>
                    {% endfor %}
                </ul>
            </div>

            <div class="menu-section">
                <h2 class="menu-section-title">Plats :</h2>
                <ul class="menu-items">
                    {% for plat in menu.plats %}
                        <li class="menu-item">
                             {{ plat.nom }}
                        </li>
                    {% else %}
                        <li class="menu-item">Aucun plat disponible pour le moment.</li>
                    {% endfor %}
                </ul>
            </div>

            <div class="menu-section">
                <h2 class="menu-section-title">Desserts :</h2>
                <ul class="menu-items">
                    {% for dessert in menu.desserts %}
                        <li class="menu-item">
                             {{ dessert.nom }}
                        </li>
                    {% else %}
                        <li class="menu-item">Aucun dessert disponible pour le moment.</li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
 <a href="{{ path('app_menu_generate-pdf') }}">Générer PDF</a>


{% endblock %}