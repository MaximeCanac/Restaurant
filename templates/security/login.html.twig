{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
   
    {% endif %}
    {% if app.user %}
 <div class="h4 mb-3 font-weight-normal , center ">
            Vous étes déjà connecté  </div> 
    {% endif %}
    <br> <br>
    <center>
    <h1 class="h3 mb-3 font-weight-normal">Merci de vous connecter</h1>
    <br>
    <label for="inputUsername">Identifiant</label>
     <div class="col-3">
     <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control " autocomplete="username" required autofocus>
    </div>
    
    <label for="inputPassword">Mot de passe</label>
    
    <div class="col-3">
    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
     
     <br>
    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >
   
    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

<br>
    <button class="btn btn-lg btn-success" type="submit">
        Connexion
    </button>
    </div>
</form>
<br>
 
            
            <button class="btn btn-lg btn-success , center" type="submit"    >
    <a href="{{ path('app_logout') }}" class="text-decoration-none text-light ">Deconnexion</a>
            </button>
       
         </center> 
    
{% endblock %}
