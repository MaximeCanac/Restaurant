{% extends 'base.html.twig' %}

{% block content %}
    <h1>Blog</h1>
{{ form_start(form) }}

{{ form_row(form.title) }}
{{ form_row(form.content) }}
{{ form_row(form.image) }}

<button type="submit" class="btn btn-primary">Enregistrer</button>

{{ form_end(form) }}

    <table class="table">
        <thead> 
            <tr>
                <th>Titre</th>
                <th>Date</th>
                <th>Auteur</th>
            </tr>
        </thead>
        <tbody>
            {% for post in posts %}
                <tr>
                    <td><a href="{{ path('blog_show', {'id': post.id}) }}">{{ post.title }}</a></td>
                    <td>{{ post.createdAt|date('d/m/Y') }}</td>
                    <td>{{ post.author }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Aucun article trouv√©.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}



