{% extends 'base.html.twig' %}

{% block title %}nouveau Blog{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('public/javascript/blog.js') }}"></script>
{% endblock %}

<div class="example-wrapper">

    <form id="myForm">
        <div class="mb-3">
            <label for="name" class="form-label">Titre :</label>
            <input type="text" id="name" name="titre" class="form-control" required>
        </div>

        <div class="mb-3">
            <label for="contenu" class="form-label">Contenu :</label>
            <textarea id="contenu" name="contenu" class="form-control" required></textarea>
        </div>

        <div class="mb-3">
            <label for="image" class="form-label">Image :</label>
            <textarea id="image" name="image" class="form-control"></textarea>
            <small class="form-text text-muted"> </small>
        </div>

        <div class="mb-3">
            <label for="date" class="form-label">Date :</label>
            <textarea id="date" name="date" class="form-control" required></textarea>
        </div>

        <div class="mb-3">
            <label for="autheur" class="form-label">Auteur :</label>
            <textarea id="autheur" name="autheur" class="form-control" required></textarea>
        </div>

        <button type="submit" class="btn btn-primary">Envoyer</button>
    </form>
    
</div>

<div id="articles"></div>

{% endblock %}



