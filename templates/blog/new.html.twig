{# templates/blog/new.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Nouveau Post{% endblock %}

{% block body %}
<div class="container">
    <h1 class="text-center">Nouveau Post</h1>

    <div class="row justify-content-center">
        <div class="col-md-6">
            {{ form_start(form) }}
            
            <div class="form-group">
                {{ form_label(form.titre) }}
                {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
            </div>
            
            <div class="form-group">
                {{ form_label(form.contenu) }}
                {{ form_widget(form.contenu, {'attr': {'class': 'form-control'}}) }}
            </div>
            <br>
            <div class="form-group">
                {{ form_label(form.image) }}
                {{ form_widget(form.image, {'attr': {'class': 'form-control-file'}}) }}
            </div>
            <br>
            <div class="form-group">
                {{ form_label(form.date) }}
                {{ form_widget(form.date, {'attr': {'class': 'form-control'}}) }}
            </div>
            
            <div class="form-group">
                {{ form_label(form.auteur) }}
                {{ form_widget(form.auteur, {'attr': {'class': 'form-control'}}) }}
            </div>
            <br>
            <button type="submit" class="btn btn-primary">Cr√©er</button>
            
            {{ form_end(form) }}
        </div>
    </div>
</div>

{% endblock %}
