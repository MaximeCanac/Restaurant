{% extends 'base.html.twig' %}

{% block title %}Blog{% endblock %}

{% block body %}
    <h1>Mon Blog</h1>
    
    {% for post in posts %}
        <article>
            <h2>{{ post.titre }}</h2>
            <p>{{ post.contenu }}</p>
            <p>Publi√© par {{ post.auteur }} le {{ post.date|date('d/m/Y') }}</p>
        </article>
        <hr>
    {% endfor %}
    
    <a class="btn btn-primary" href="{{ path('blog_new') }}">Nouveau Post</a>
{% endblock %}
