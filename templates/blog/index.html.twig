{% extends 'base.html.twig' %}

{% block title %}Liste des posts{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mt-4">Liste des posts</h1>

        <div class="row">
            {% for post in posts %}
                <div class="col-md-6">
                    <div class="card mb-4">
                        <div class="card-body">
                            <h5 class="card-title">
                                <a href="{{ path('blog_show', {'id': post.id}) }}">{{ post.titre }}</a>
                            </h5>
                            <p class="card-text">{{ post.contenu|slice(0, 100) ~ '...' }}</p>
                            <p class="card-text"><strong>Auteur :</strong> {{ post.auteur }}</p>
                        </div>
                    </div>
                </div>
            {% endfor %} 
             {% if is_granted('ROLE_ADMIN') %}
        </div>
           
        <a class="btn btn-primary" href="{{ path('blog_new') }}">Nouveau Post</a>
    </div>
     {% endif %} 
{% endblock %}