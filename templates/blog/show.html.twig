{% extends 'base.html.twig' %}

{% block title %}DÃ©tails du post{% endblock %}

{% block body %}
    <div class="container">
        <div class="card my-4">
            <div class="row">
                <div class="col-md-8">
                    <div class="card-body">
                        <h2 class="card-title text-right">{{ post.titre }}</h2>
                        <p class="card-text">{{ post.contenu }}</p>
                        <p class="card-text">
                            <strong>Date :</strong> {{ post.date|date('d/m/Y') }}<br>
                            <strong>Auteur :</strong> {{ post.auteur }}
                        </p>
                    </div>
                </div>
                {% if post.image %}
                    <div class="col-md-4">
                        <img src="{{ asset('images/blog_directory/' ~ post.image) }}" class="card-img-top" alt="Image du post" style="max-width: 12000px; height: auto;">
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
