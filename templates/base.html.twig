<!DOCTYPE html>
{# templates/base.html.twig #}
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Non Renseigné{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
        
        
        {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
        <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
        {% endblock %}
        
        {% block javascripts %}
        {{ encore_entry_script_tags('app') }}     
        {% endblock %}
    </head>    
 
        <header>
        <nav class="navbar navbar-expand-lg bg-success ">
            <div class="container-fluid">
              <a class="navbar-brand" href="{{path('app_accueil') }}">Hotel restaurant Le Café de Paris</a>

              <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>

              <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav">

                  <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="#"></a>
                  </li>

                  <li class="nav-item">
                    <button class="btn btn-outline-succes">
                      <a class="nav-link " href="{{path('app_login') }}">Menu</a>
                    </button>
                  </li>
                
                  <li class="nav-item">
                    <button class="btn btn-outline-succes">
                      <a class="nav-link" href="{{path('app_login') }}">Blog</a>
                    </button>
                  </li>

                  {% if is_granted('ROLE_ADMIN') %}
                  <li class="nav-item">
                    <button class="btn btn-outline-succes">
                      <a class="nav-link" href="{{path('app_login') }}">Avis</a>
                    </button>
                  </li>
                  {% endif %} 
                  
                  <li class="nav-item">
                    <button class="btn btn-outline-succes">
                      <a class="nav-link"  href="{{path('app_login') }}">Connexion</a>
                    </button>         
                  </li>
                  {% if is_granted('ROLE_ADMIN') %}
                  <li class="nav-item">
                    <button class="btn btn-outline-succes">
                      <a class="nav-link" href="{{path('app_logout') }}">Déconnexion</a>
                    </button>
                  </li>
                  {% endif %} 
                  {% if is_granted('ROLE_ADMIN') %}
                  <li class="nav-item">
                    <button class="btn btn-outline-succes">
                      <a class="nav-link" href="{{path('app_admin') }}">Administration</a>
                    </button>
                  </li>
                  {% endif %}
                </ul>
              </div>
            </div>
        </nav>
        </header>

        <body class=" bg-light">

          {% block body %}{%  endblock %}

          <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
        </body>
    
</html>
